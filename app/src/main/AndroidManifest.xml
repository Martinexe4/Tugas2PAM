<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">
        <activity
            android:name="com.example.app.LoginActivity"
            android:exported="true"
            android:label="@string/login_page">
            android:theme="@style/Theme.App.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.app.RegisterActivity"
            android:exported="false"
            android:label="@string/register_page"
            android:theme="@style/Theme.App.NoActionBar"/>
        <activity
            android:name="com.example.app.MainActivity"
            android:exported="true"
            android:label=  "@string/app_name"
            android:theme="@style/Theme.App.NoActionBar">
        </activity>
        <activity
            android:name="com.example.app.ui.skill.SkillDetail"
            android:exported="true"
            android:label="@string/app_name" />
    </application>

</manifest>